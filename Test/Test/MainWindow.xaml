<Window x:Class="LeanDevelopmentTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Тест по Бережливой разработке" Height="550" Width="800" Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/111.jpg"/>
        </Grid.Background>

        <!-- Главная панель -->
        <StackPanel x:Name="MainPanel" Margin="10">
            <Button x:Name="StartButton" Content="Начать тест" Click="StartButton_Click" Width="120" Height="30" Margin="0,10"/>
            <Button x:Name="SettingsButton" Content="Настроить баллы за вопросы" Click="SettingsButton_Click" Width="180" Height="30" Margin="0,10"/>
            <Button x:Name="ConfigureGradesButton" Content="Настроить оценки" Click="ConfigureGradesButton_Click" Width="120" Height="30" Margin="0,10"/>
        </StackPanel>

        <!-- Панель настройки баллов -->
        <StackPanel x:Name="SettingsPanel" Visibility="Collapsed" Margin="10">
            <TextBlock Text="Настройка баллов за каждый вопрос:" FontWeight="Bold" Margin="0,10,0,5"/>
            <ScrollViewer x:Name="QuestionsScrollViewer" Height="300" Margin="0,10">
                <StackPanel x:Name="QuestionsStackPanel"/>
            </ScrollViewer>
            <Button Content="Сохранить настройки" Click="SaveSettings_Click" Width="120" Height="30" Margin="0,20"/>
            <Button Content="Вернуться назад" Click="BackToMain_Click" Width="120" Height="30" Margin="0,10"/>
        </StackPanel>

        <!-- Панель настройки оценок -->
        <StackPanel x:Name="GradesSettingsPanel" Visibility="Collapsed" Margin="10">
            <TextBlock Text="Настройка порогов для оценок:" FontWeight="Bold" Margin="0,10,0,5"/>

            <!-- Отображение общего количества баллов -->
            <TextBlock x:Name="TotalPointsTextBlock" Text="Общее количество баллов: 30" FontWeight="Bold" Margin="0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Оценка 2 (до): " VerticalAlignment="Center"/>
                <TextBox x:Name="Grade2ThresholdTextBox" Text="4" Width="50" Margin="0,0,10,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Оценка 3 (от до): " VerticalAlignment="Center"/>
                <TextBox x:Name="Grade3ThresholdTextBox" Text="5" Width="50" Margin="0,0,10,0"/>
                <TextBlock Text="до "/>
                <TextBox x:Name="Grade4ThresholdTextBox" Text="7" Width="50" Margin="0,0,10,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Оценка 4 (от до): " VerticalAlignment="Center"/>
                <TextBox x:Name="Grade4StartThresholdTextBox" Text="7" Width="50" Margin="0,0,10,0"/>
                <TextBlock Text="до "/>
                <TextBox x:Name="Grade5ThresholdTextBox" Text="9" Width="50" Margin="0,0,10,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Оценка 5 (от): " VerticalAlignment="Center"/>
                <TextBox x:Name="Grade5StartThresholdTextBox" Text="9" Width="50" Margin="0,0,10,0"/>
            </StackPanel>
            <Button Content="Сохранить настройки" Click="SaveGradesSettings_Click" Width="120" Height="30" Margin="0,20"/>
            <Button Content="Вернуться назад" Click="BackToMainFromGrades_Click" Width="120" Height="30" Margin="0,10"/>
        </StackPanel>

        <!-- Тестовая панель -->
        <StackPanel x:Name="TestPanel" Visibility="Collapsed" Margin="10">
            <TextBlock x:Name="QuestionText" Text="Вопрос будет здесь" FontSize="16" Margin="0,0,0,10"/>
            <RadioButton x:Name="Answer1" Content="Ответ 1" GroupName="Answers" Margin="0,5"/>
            <RadioButton x:Name="Answer2" Content="Ответ 2" GroupName="Answers" Margin="0,5"/>
            <RadioButton x:Name="Answer3" Content="Ответ 3" GroupName="Answers" Margin="0,5"/>
            <RadioButton x:Name="Answer4" Content="Ответ 4" GroupName="Answers" Margin="0,5"/>
            <TextBlock x:Name="ResultText" Text="" FontSize="14" Margin="0,10"/>

            <!-- Кнопки управления -->
            <Button x:Name="NextButton" Content="Следующий вопрос" Click="NextButton_Click" Background="{DynamicResource {x:Static SystemColors.InactiveBorderBrushKey}}" Width="142"/>
            <Button x:Name="BackButton" Content="Предыдущий вопрос" Click="BackButton_Click" Background="{DynamicResource {x:Static SystemColors.InactiveBorderBrushKey}}" Width="142"/>

            <!-- Новая кнопка "Завершить тест" -->
            <Button x:Name="FinishButton" Content="Завершить тест" Click="FinishButton_Click" Background="{DynamicResource {x:Static SystemColors.InactiveBorderBrushKey}}" Width="142" Visibility="Collapsed"/>

            <Label x:Name="Timer" Content="TimerEnd"/>
        </StackPanel>
    </Grid>
</Window>